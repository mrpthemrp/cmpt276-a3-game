<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peach_background"
    android:backgroundTint="#5CF3F3F3"
    android:backgroundTintMode="multiply"
    tools:context=".ui.OptionsScreen">

    <RadioGroup
        android:id="@+id/options_CartonGroup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/peach_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_CartonsText">

    </RadioGroup>

    <RadioGroup
        android:id="@+id/options_SizeGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="82dp"
        android:background="@color/peach_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_SizeText">

    </RadioGroup>

    <TextView
        android:id="@+id/options_CartonsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="39dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/options_CartonsTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/peach_700"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/options_SizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="177dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/options_SizeTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/peach_700"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>