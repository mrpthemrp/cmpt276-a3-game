<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmpt276.assign3.mineseeker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MineSeeker">
        <activity
            android:name=".ui.HelpScreen"
            android:label="@string/helpScreen"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".ui.OptionsScreen"
            android:label="@string/optionsScreen"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".ui.GameScreen"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".ui.WelcomeScreen"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainMenu"
            android:label="@string/mainMenu"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>